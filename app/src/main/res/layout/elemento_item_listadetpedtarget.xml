<?xml version="1.0" encoding="utf-8"?>
<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_item"
        android:layout_column="0"
        android:padding="2dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_view_cuerpotabla"
        >
    </TextView>

    <TextView
        android:id="@+id/txt_cod_prod"
        android:layout_column="0"
        android:padding="2dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_view_cuerpotabla"
        >
    </TextView>


    <TextView
    android:id="@+id/txt_Tarped_cod_corp"
    android:layout_column="0"
    android:padding="2dp"
    android:gravity="left"
    android:textStyle="bold"
    android:textColor="@color/colorPrimary"
    android:background="@drawable/text_view_cuerpotabla"
    >
</TextView>

    <TextView
        android:id="@+id/txt_Tarped_descripcion"
        android:layout_column="1"
        android:padding="2dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_view_cuerpotabla">
    </TextView>

    <TextView
        android:id="@+id/txt_Tarped_unidad_medida_corto"
        android:layout_column="2"
        android:padding="2dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_view_cuerpotabla">
    </TextView>

    <TextView
        android:id="@+id/txt_Tarped_cantidad"
        android:layout_column="4"
        android:padding="2dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_view_cuerpotabla">
    </TextView>

    <TextView
        android:id="@+id/txt_Tarped_valor_unitario"
        android:layout_column="5"
        android:padding="2dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_view_cuerpotabla">
    </TextView>

    <TextView
        android:id="@+id/txt_Tarped_precio_unitario"
        android:layout_column="6"
        android:padding="2dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_view_cuerpotabla">
    </TextView>


    <TextView
        android:id="@+id/txt_Tarped_dscto"
        android:layout_column="7"
        android:padding="2dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_view_cuerpotabla">
    </TextView>

    <TextView
        android:id="@+id/txt_Tarped_igv"
        android:layout_column="8"
        android:padding="2dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_view_cuerpotabla">
    </TextView>


    <TextView
        android:id="@+id/txt_Tarped_total"
        android:layout_column="9"
        android:padding="2dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_view_cuerpotabla">
    </TextView>

</TableRow>