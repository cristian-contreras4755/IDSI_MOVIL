<?xml version="1.0" encoding="utf-8"?>
<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">



    <TextView
        android:id="@+id/txt_ped_cod_pedido"
        android:layout_column="0"
        android:padding="2dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_view_cuerpotabla"

        >
    </TextView>

    <TextView
        android:id="@+id/txt_ped_nro_pedido"
        android:layout_column="1"
        android:padding="2dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_view_cuerpotabla"

        >
    </TextView>
    <TextView
        android:id="@+id/txt_ped_cliente"
        android:layout_column="2"
        android:padding="2dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_view_cuerpotabla"
        >

    </TextView>

    <TextView
        android:id="@+id/txt_ped_fecha_emision"
        android:layout_column="3"
        android:padding="2dp"
        android:gravity="right"
        android:layout_marginEnd="3dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_view_cuerpotabla">
    </TextView>

    <TextView
        android:id="@+id/txt_ped_total"
        android:layout_column="4"
        android:padding="2dp"
        android:gravity="right"
        android:layout_marginEnd="3dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_view_cuerpotabla">
    </TextView>

    <TextView
        android:id="@+id/txt_ped_estado"
        android:layout_column="5"
        android:padding="2dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_view_cuerpotabla"
        >

    </TextView>

    <ImageButton
        android:id="@+id/btn_render_Pedidotarget"
        android:layout_width="20dp"
        android:paddingTop="2dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/boton_general_pequeno"
        android:src="@drawable/ic_vista2" />

</TableRow>