<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegistrarPedidoFragment"
    android:id="@+id/RegistrarPedidoFragmentID">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/sc_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Registrar pedido"
                android:textColor="#084B8A"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Nro oden Pedido :"
                    android:textColor="#084B8A"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/txt_nro_pedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Ingrese nro  pedido"
                    android:inputType="textPersonName"
                    android:textColorLink="#084B8A" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Cliente:"
                    android:textColor="#084B8A"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txt_nombreCliente"
                        android:layout_width="315dp"
                        android:layout_height="wrap_content"
                        android:hint="Buscar cliente"
                        android:inputType="textPersonName"
                        android:textColorLink="#084B8A" />

                    <ImageButton
                        android:id="@+id/IB_buscarCliene"
                        android:layout_width="45dp"
                        android:layout_height="36dp"
                        android:background="@color/colorPrimary"
                        android:src="@android:drawable/ic_menu_search" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Fecha de entrega :"
                    android:textColor="#084B8A"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txt_fechaEntrega"
                        android:layout_width="315dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Seleccione fecha entrega"
                        android:inputType="date" />

                    <ImageButton
                        android:id="@+id/IB_seleccionafecha"
                        android:layout_width="45dp"
                        android:layout_height="36dp"
                        android:background="@color/colorPrimary"
                        android:src="@android:drawable/ic_menu_search" />
                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView120"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Observaciones"
                    android:textColor="#084B8A"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/txt_observaciones"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="observaciones"
                    android:inputType="textMultiLine"
                    android:textColorLink="#084B8A" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Detalle:"
                    android:textColor="#084B8A"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txt_nombreProd"
                        android:layout_width="296dp"
                        android:layout_height="wrap_content"
                        android:hint="Producto"
                        android:inputType="textPersonName"
                        android:textColorLink="#084B8A" />

                    <ImageButton
                        android:id="@+id/IB_buscarProd"
                        android:layout_width="45dp"
                        android:layout_height="36dp"
                        android:background="@color/colorPrimary"
                        android:src="@android:drawable/ic_menu_search" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txt_CantProd"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp">

                <Button
                    android:id="@+id/btn_anadir_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="10dp"
                    android:text="AÃ±adir Item"
                    android:textColor="@android:color/white" />

                <ListView
                    android:id="@+id/lv_detalle"
                    android:layout_width="match_parent"
                    android:layout_height="301dp">

                </ListView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="SUBTOTAL :"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_subtotal"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="00.00"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView58"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="IGV :"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_igv"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="00.00"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView50"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="TOTAL :"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_total"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="00.00"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btn_registrarPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:text="Registrar Pedido"
                android:textColor="@android:color/white" />

        </LinearLayout>


    </ScrollView>


</FrameLayout>